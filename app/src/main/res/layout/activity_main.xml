<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu"
                    android:scaleType="fitStart"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:scaleType="fitEnd"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/beahar"

                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/bullhar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/slotformation"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffff"
                    android:text="Bearish Harami: A bearish harami is a two-candlestick pattern in technical analysis, where a small bullish candle is followed by a larger bearish candle. It suggests a potential reversal from an uptrend to a downtrend."
                    android:textSize="8pt"
                    android:padding="15dp"
                    android:gravity="left"
                    android:lineSpacingExtra="6dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/bearengulf"
                    android:scaleType="fitStart"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/bullengulf"
                    android:scaleType="fitStart"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/slotformation"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffff"
                    android:text="A bullish reversal pattern with two candles, starting with a small bearish one and followed by a larger bullish one that completely engulfs it, indicating a potential trend reversal from bearish to bullish."
                    android:textSize="8pt"
                    android:padding="15dp"
                    android:gravity="left"
                    android:lineSpacingExtra="6dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/depthlearning"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bearharbutton"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bullharbutton"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp"
                >
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bearengulfbutton"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bullengulfbutton"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>